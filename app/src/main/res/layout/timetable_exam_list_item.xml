<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/timetable_exam_list_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CO1407 - Introduction to Programming"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/list_item_event_name" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/timetable_exam_list_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jun 13th"
            android:layout_marginEnd="8dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/list_item_time_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timetable_exam_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:00 -10:00"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/list_item_time_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/timetable_exam_list_item_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Room: CY017"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/list_item_event_description" />
</LinearLayout>