<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/moduleCodeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CO1407"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/list_item_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="("
            android:textColor="@color/black"
            android:textSize="@dimen/list_item_event_description"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/attendedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="@color/att_excellent"
            android:textSize="@dimen/list_item_event_description"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/black"
            android:textSize="@dimen/list_item_event_description"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/absenceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textColor="@color/att_poor"
            android:textSize="@dimen/list_item_event_description"
            android:textStyle="normal|bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=")"
            android:textColor="@color/black"
            android:textSize="@dimen/list_item_event_description"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/moduleNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduction to programming"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/list_item_event_description" />

    <ProgressBar
        android:id="@+id/attendanceProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="90" />


</LinearLayout>