<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CO1407 - Introduction to Programming"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/list_item_event_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/news_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Jun 13th"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/list_item_time_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:00 -10:00"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/list_item_time_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/news_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dummy description"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/list_item_event_description" />
</LinearLayout>